{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-09-16/server.schema.json",
  "name": "io.github.drtrips-comp/drtrips-google-mcp",
  "displayName": "DrTrips Google Places MCP",
  "description": "MCP server for Google Places API with geocoding, place search, and place details via stdio",
  "version": "1.0.3",
  "icon": "https://www.gstatic.com/images/branding/product/2x/maps_96dp.png",
  "license": "MIT",
  "keywords": [
    "mcp",
    "google-maps",
    "google-places",
    "geocoding",
    "places",
    "maps",
    "stdio",
    "typescript"
  ],
  "categories": [
    "data-integration",
    "location-services"
  ],
  "homepage": "https://github.com/DrTrips-Comp/drtrips-googlemaps-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/DrTrips-Comp/drtrips-googlemaps-mcp.git",
    "source": "https://github.com/DrTrips-Comp/drtrips-googlemaps-mcp"
  },
  "deployment": {
    "type": "package",
    "package": {
      "type": "npm",
      "name": "drtrips-google-mcp",
      "registry": "https://registry.npmjs.org"
    }
  },
  "config": {
    "env": {
      "GOOGLE_MAPS_API_KEY": {
        "description": "Google Maps API key with Places API enabled",
        "required": true
      }
    }
  },
  "capabilities": {
    "tools": [
      {
        "name": "geocode_address",
        "description": "Convert an address to geographic coordinates (latitude/longitude)"
      },
      {
        "name": "get_place_details",
        "description": "Get detailed information about a place using Google Place ID or search query"
      }
    ]
  }
}
